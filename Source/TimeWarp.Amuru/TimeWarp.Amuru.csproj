<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>TimeWarp.Amuru</PackageId>
    <Description>Fluent API for elegant C# scripting with pipeline support</Description>
    <PackageTags>cli;scripting;fluent;shell;pipeline;amuru</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CliWrap" />
    <PackageReference Include="StreamJsonRpc" />
    <!-- Note: Microsoft.VisualStudio.Validation was needed for project reference but not for package -->
  </ItemGroup>

  <ItemGroup>
    <None Include="$(RepositoryRoot)README.md" Pack="true" PackagePath="" />
  </ItemGroup>

</Project>
